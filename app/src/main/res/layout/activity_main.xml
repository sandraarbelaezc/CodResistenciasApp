<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.codresistenciasapp.MainActivity"
    android:weightSum="1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="110dp"
        android:layout_weight="1"
        android:background="@drawable/resistor"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="10dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="100dp"
            android:layout_marginBottom="2.3dp"
            android:layout_weight="0.01"
            android:id="@+id/lBand1"
            android:orientation="horizontal">
        </LinearLayout>

        <LinearLayout
            android:layout_width="10dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="2.3dp"
            android:layout_weight="0.01"
            android:id="@+id/lBand2"
            android:orientation="horizontal">
        </LinearLayout>

        <LinearLayout
            android:layout_width="10dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="2.3dp"
            android:layout_weight="0.01"
            android:id="@+id/lBand3"
            android:orientation="horizontal">
        </LinearLayout>

        <LinearLayout
            android:layout_width="10dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="24dp"
            android:layout_marginBottom="2.3dp"
            android:layout_weight="0.01"
            android:id="@+id/lBand4"
            android:orientation="horizontal">
        </LinearLayout>


    </LinearLayout>

    <LinearLayout style="@style/LayoutStyle"
        android:orientation="horizontal">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:textColor="@color/black"
            android:background="@color/beige"
            android:id="@+id/eNumero" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/khaki"
            android:text="Calcular"
            android:id="@+id/bCalcular"/>

    </LinearLayout>


    <LinearLayout style="@style/LayoutStyle">

        <Button style="@style/ButtonStyle" />

        <Button style="@style/ButtonStyle"
            android:background="@color/black"
            android:text="0"
            android:textColor="@color/white"
            android:id="@+id/bNeB2"/>

        <Button style="@style/ButtonStyle"
            android:background="@color/black"
            android:text="1"
            android:textColor="@color/white"
            android:id="@+id/bNeB3"/>

        <Button style="@style/ButtonStyle" />

    </LinearLayout>

    <LinearLayout style="@style/LayoutStyle">

        <Button style="@style/ButtonStyle"
            android:background="@color/brown"
            android:text="1"
            android:textColor="@color/white"
            android:id="@+id/bCaB1"/>

        <Button style="@style/ButtonStyle"
            android:background="@color/brown"
            android:text="1"
            android:textColor="@color/white"
            android:id="@+id/bCaB2"/>

        <Button style="@style/ButtonStyle"
            android:background="@color/brown"
            android:text="10"
            android:textColor="@color/white"
            android:id="@+id/bCaB3"/>

        <Button style="@style/ButtonStyle"
            android:background="@color/brown"
            android:text="1%"
            android:textColor="@color/white"
            android:id="@+id/bCaB4"/>

    </LinearLayout>

    <LinearLayout style="@style/LayoutStyle">

        <Button style="@style/ButtonStyle"
            android:background="@color/red"
            android:text="2"
            android:textColor="@color/white"
            android:id="@+id/bRoB1"/>

        <Button style="@style/ButtonStyle"
            android:background="@color/red"
            android:text="2"
            android:textColor="@color/white"
            android:id="@+id/bRoB2"/>

        <Button style="@style/ButtonStyle"
            android:background="@color/red"
            android:text="100"
            android:textColor="@color/white"
            android:id="@+id/bRoB3"/>

        <Button style="@style/ButtonStyle"
            android:background="@color/red"
            android:text="2%"
            android:textColor="@color/white"
            android:id="@+id/bRoB4"/>

    </LinearLayout>

    <LinearLayout style="@style/LayoutStyle">

        <Button style="@style/ButtonStyle"
            android:background="@color/orange"
            android:text="3"
            android:textColor="@color/white"
            android:id="@+id/bNaB1"/>

        <Button style="@style/ButtonStyle"
            android:background="@color/orange"
            android:text="3"
            android:textColor="@color/white"
            android:id="@+id/bNaB2"/>

        <Button style="@style/ButtonStyle"
            android:background="@color/orange"
            android:text="1K"
            android:textColor="@color/white"
            android:id="@+id/bNaB3"/>

        <Button style="@style/ButtonStyle"/>

    </LinearLayout>

    <LinearLayout style="@style/LayoutStyle">

        <Button style="@style/ButtonStyle"
            android:background="@color/yellow"
            android:text="4"
            android:textColor="@color/black"
            android:id="@+id/bAmaB1"/>

        <Button style="@style/ButtonStyle"
            android:background="@color/yellow"
            android:text="4"
            android:textColor="@color/black"
            android:id="@+id/bAmaB2"/>

        <Button style="@style/ButtonStyle"
            android:background="@color/yellow"
            android:text="10K"
            android:textColor="@color/black"
            android:id="@+id/bAmaB3"/>

        <Button style="@style/ButtonStyle"/>

    </LinearLayout>

    <LinearLayout style="@style/LayoutStyle">

        <Button style="@style/ButtonStyle"
            android:background="@color/green"
            android:text="5"
            android:textColor="@color/black"
            android:id="@+id/bVeB1"/>

        <Button style="@style/ButtonStyle"
            android:background="@color/green"
            android:text="5"
            android:textColor="@color/black"
            android:id="@+id/bVeB2"/>

        <Button style="@style/ButtonStyle"
            android:background="@color/green"
            android:text="100K"
            android:textColor="@color/black"
            android:id="@+id/bVeB3"/>

        <Button style="@style/ButtonStyle"
            android:background="@color/green"
            android:text="0.5%"
            android:textColor="@color/black"
            android:id="@+id/bVeB4"/>

    </LinearLayout>

    <LinearLayout style="@style/LayoutStyle">

        <Button style="@style/ButtonStyle"
            android:background="@color/blue"
            android:text="6"
            android:textColor="@color/white"
            android:id="@+id/bAzB1"/>

        <Button style="@style/ButtonStyle"
            android:background="@color/blue"
            android:text="6"
            android:textColor="@color/white"
            android:id="@+id/bAzB2"/>

        <Button style="@style/ButtonStyle"
            android:background="@color/blue"
            android:text="1M"
            android:textColor="@color/white"
            android:id="@+id/bAzB3"/>

        <Button style="@style/ButtonStyle"
            android:background="@color/blue"
            android:text="0.25%"
            android:textColor="@color/white"
            android:id="@+id/bAzB4"/>

    </LinearLayout>

    <LinearLayout style="@style/LayoutStyle">

        <Button style="@style/ButtonStyle"
            android:background="@color/violet"
            android:text="7"
            android:textColor="@color/white"
            android:id="@+id/bMoB1"/>

        <Button style="@style/ButtonStyle"
            android:background="@color/violet"
            android:text="7"
            android:textColor="@color/white"
            android:id="@+id/bMoB2"/>

        <Button style="@style/ButtonStyle"
            android:background="@color/violet"
            android:text="10M"
            android:textColor="@color/white"
            android:id="@+id/bMoB3"/>

        <Button style="@style/ButtonStyle"
            android:background="@color/violet"
            android:text="0.1%"
            android:textColor="@color/white"
            android:id="@+id/bMoB4"/>

    </LinearLayout>

    <LinearLayout style="@style/LayoutStyle">

        <Button style="@style/ButtonStyle"
            android:background="@color/gray"
            android:text="8"
            android:textColor="@color/white"
            android:id="@+id/bGrB1"/>

        <Button style="@style/ButtonStyle"
            android:background="@color/gray"
            android:text="8"
            android:textColor="@color/white"
            android:id="@+id/bGrB2"/>

        <Button style="@style/ButtonStyle"/>

        <Button style="@style/ButtonStyle"
            android:background="@color/gray"
            android:text="0.05%"
            android:textColor="@color/white"
            android:id="@+id/bGrB4"/>

    </LinearLayout>

    <LinearLayout style="@style/LayoutStyle">

        <Button style="@style/ButtonStyle"
            android:background="@color/white"
            android:text="9"
            android:textColor="@color/black"
            android:id="@+id/bBlB1"/>

        <Button style="@style/ButtonStyle"
            android:background="@color/white"
            android:text="9"
            android:textColor="@color/black"
            android:id="@+id/bBlB2"/>

        <Button style="@style/ButtonStyle"/>

        <Button style="@style/ButtonStyle"/>

    </LinearLayout>

    <LinearLayout style="@style/LayoutStyle">

        <Button style="@style/ButtonStyle"/>

        <Button style="@style/ButtonStyle"/>

        <Button style="@style/ButtonStyle"
            android:background="@color/darkkhaki"
            android:text="0.1"
            android:textColor="@color/white"
            android:id="@+id/bDoB3"/>

        <Button style="@style/ButtonStyle"
            android:background="@color/darkkhaki"
            android:text="5%"
            android:textColor="@color/white"
            android:id="@+id/bDoB4"/>

    </LinearLayout>

    <LinearLayout style="@style/LayoutStyle">

        <Button style="@style/ButtonStyle"/>

        <Button style="@style/ButtonStyle"/>

        <Button style="@style/ButtonStyle"
            android:background="@color/silver"
            android:text="0.01"
            android:textColor="@color/white"
            android:id="@+id/bPlB3"/>

        <Button style="@style/ButtonStyle"
            android:background="@color/silver"
            android:text="10%"
            android:textColor="@color/white"
            android:id="@+id/bPlB4"/>

    </LinearLayout>

</LinearLayout>
